<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ExchangeFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/exchange_fragment" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:weightSum="1">

        <EditText
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:paddingStart="20dp"
            android:textSize="16sp"
            android:hint="@string/search_cryptocurrency"
            android:background="@drawable/round_fill_border"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/round_border"
            android:layout_weight="0.2">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="16dp"
                android:maxHeight="16dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="3dp"
                android:src="@drawable/refine"
                android:backgroundTint="@color/colorGrayVeryLight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:textSize="12sp"
                android:text="@string/filter"
                android:textColor="@color/colorGray" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>